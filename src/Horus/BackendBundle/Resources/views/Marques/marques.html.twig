{% extends 'HorusBackendBundle::layout.html.twig' %}

{% block content %}

    <div class="page" id="marques">
        <h2><i class="glyphicon glyphicon-bookmark"></i> Vos marques({{ marques.getTotalItemCount }})</h2>
        {% include 'HorusBackendBundle:Slots:display.html.twig' %}
        {% include 'HorusBackendBundle:Marques:_listmarques.html.twig' %}

        <div class="pull-right">
            {{ knp_pagination_render(marques) }}
        </div>

        <div class="clear"></div>
        <div class="action">
            <a href="{{ path('horus_site_create_marques') }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Ajouter une marque</a>
        </div>
    </div>
{% endblock %}

